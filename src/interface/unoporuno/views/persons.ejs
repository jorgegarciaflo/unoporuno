<% layout(layoutFile) %>
<% block('title',title) %>
<% block('description',description) %>

<!-- Tables ================================================== -->
<div class="bs-docs-section">

    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="tables"><%=title%></h1>
            </div>

            <div class="bs-component">
                <p> Bienvenue <a href="#"><%=username%></a></p>
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Information(s) g√©ographique(s)</th>
                            <th>Organisation(s)</th>
                            <th>Domaine(s)</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% 
                        var i = 0;

                        for(i = 0; i < data.length; i++) 
                        {
                        %>
                            <tr <% if(i%2 == 0){%> class="success" <%}%> >
                                <td>
                                    <a href="/details/<%= data[i].id %>">
                                        <%= data[i].name %>
                                    </a>
                                </td>
                                <td><%= data[i].geo %></td>
                                <td><%= data[i].orgs %></td>
                                <td><%= data[i].topics %></td>
                                <td>
                                <%
                                    if(data[i].mobility_status)
                                    {
                                %>
                                        OK
                                <%
                                    }
                                %>
                                </td>
                            </tr>
                        <%} %>
                    </tbody>
                </table> 
            </div>
            <!-- /example -->
        </div>
    </div>
</div>