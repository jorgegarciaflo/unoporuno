<% layout(layoutFile) %>
<% block('title',title) %>
<% block('description',description) %>

<!-- Tables ================================================== -->
<div class="bs-docs-section">

    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="tables">Recherches r√©centes</h1>
            </div>

            <div class="bs-component">
                <p> Bienvenue <a href="#"><%=username%></a></p>
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th>Utilisateur</th>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% 
                        var i = 0;

                        for(i = 0; i < data.length; i++) 
                        {
                        %>  
                            <tr <% if(i%2 == 0){%> class="success" <%}%> >
                                <td><%= data[i].id %></td>
                                <td>
                                <a href="/search/<%= data[i].id %>">
                                    <%= data[i].nombre %>
                                </a>
                                </td>
                                <td><%= data[i].usuario %></td>
                                <td><%= data[i].fecha %></td>
                                <td><%= data[i].descripcion %></td>
                                <td><%= data[i].status %></td>
                            </tr>
                        <%} %>
                    </tbody>
                </table> 
            </div>
            <!-- /example -->
        </div>
    </div>
</div>