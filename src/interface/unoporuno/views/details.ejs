<% layout(layoutFile) %>
<% block('title',title) %>
<% block('description',description) %>


<div class="bs-docs-section">
    <div class="row">

        <div class="col-lg-12">
                <div class="col-lg-4">
                    <div class="well bs-component">
                        <form class="form-horizontal" method="post">
                            <fieldset>
                                <legend>Filtrage par langue</legend>
                                <div class="form-group">
                                    <div class="col-lg-10 col-lg-offset-2">
                                        <select class="form-control" name="lang">
                                        <%

                                        var j = 0;
                                        for(i = 0; i < lang.length; i++)
                                        {
                                        %>
                                            <option value="<%= lang[i].value %>" <% if(selected == lang[i].value){%> selected <%}%> > 
                                                <%=lang[i].value%>
                                            </option> 
                                        <%
                                        }
                                        %>
                                        </select>

                                        <input type="hidden" class="form-control" id="persona_id" name="persona_id" placeholder="persona_id" value="<%=persona_id%>">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-10 col-lg-offset-2">
                                        <button type="submit" class="btn btn-primary">Valider</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>

                <div class="col-lg-8">

                    <h1><%= title %></h1>
                    <table class="table table-striped table-hover ">
                        <thead>
                            <tr>
                                <th>RequÃªte</th>

                                <th>Titre</th>

                                <th>Description</th>

                                <th>Lien</th>
                            </tr>
                        </thead>

                        <tbody>
                        <% 
                            var i = 0;

                            for(i = 0; i < data.length; i++) 
                            {
                        %>
                                <tr>
                                    <td>
                                        <%=data[i].query %>
                                    </td>

                                    <td>
                                        <%=data[i].title %>
                                    </td>

                                    <td>
                                        <%=data[i].description %>
                                    </td>

                                    <td>
                                        <a href="<%=data[i].link %>">
                                            <%=data[i].link %>
                                        </a>
                                    </td>
                                </tr>
                        <%
                            }
                        %>
                        </tbody>
                    </table>
                </div>

        </div>

    </div>
</div>
